        <p><%= lorem.sentences 2 %>. <a href="<%= sub_02.url %>"><span class="read-more">[&hellip;]</span></a></p>
      </div>
    </div>
    <!-- text end -->

    <!-- images -->
    <div class="row" data-equalizer>
      <a href="<%= sub_03.url %>">
        <div class="small-12 medium-6 columns" data-equalizer-watch>
          <%= image_tag "aid-photo07.jpg", :class => 'hide-for-small-only' %>
        </div>
      </a>
      <a href="<%= sub_04.url %>">
        <div class="small-12 medium-6 columns" data-equalizer-watch>
          <%= image_tag "aid-photo03.jpg", :class => 'hide-for-small-only' %>
        </div>
      </a>
    </div>
    <!-- images end -->

    <!-- text -->
    <div class="row page-content-text medium">
      <div class="small-12 medium-6 columns">
        <%= image_tag "aid-photo01.jpg", :class => 'show-for-small-only small-screen-image' %>
        <a href="<%= sub_03.url %>"><h3 class="inline"><%= sub_03.title %>.</h3></a>
        <p><%= lorem.sentences 2 %>. <a href="<%= sub_03.url %>"><span class="read-more">[&hellip;]</span></a></p>
      </div>
      <div class="small-12 medium-6 columns">
        <%= image_tag "aid-photo02.jpg", :class => 'show-for-small-only small-screen-image' %>
        <a href="<%= sub_04.url %>"><h3 class="inline"><%= sub_04.title %>.</h3></a>
        <p><%= lorem.sentences 2 %>. <a href="<%= sub_04.url %>"><span class="read-more">[&hellip;]</span></a></p>
      </div>
    </div>
