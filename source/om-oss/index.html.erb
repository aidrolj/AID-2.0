<%
  sub_01 = current_page.data.sub_sections.at(0)
  sub_02 = current_page.data.sub_sections.at(1)
  sub_03 = current_page.data.sub_sections.at(2)
  sub_04 = current_page.data.sub_sections.at(3)
%>

<section class="main-section">

  <div class="page-content">

    <!-- tjänster text -->
    <div class="row page-content-text">
      <div class="small-12 columns">
        <h2 class="inline"><%= current_page.data.title%>.</h2>
        <p><%= lorem.sentences 10 %>.</p>
      </div>
    </div>
    <!-- tjänster text end -->

    <!-- images -->
    <div class="row" data-equalizer>
      <a href="<%= sub_01.url %>">
        <div class="small-12 medium-6 columns" data-equalizer-watch>
          <%= image_tag "aid-photo09.jpg", :class => 'hide-for-small-only' %>
        </div>
      </a>
      <a href="<%= sub_02.url %>">
        <div class="small-12 medium-6 columns" data-equalizer-watch>
          <%= image_tag "aid-photo02.jpg", :class => 'hide-for-small-only' %>
        </div>
      </a>
    </div>
    <!-- images end -->

    <!-- text -->
    <div class="row page-content-text medium">
      <div class="small-12 medium-6 columns">
        <%= image_tag "aid-photo09.jpg", :class => 'show-for-small-only small-screen-image' %>
